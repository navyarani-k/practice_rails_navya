<div class= "table-area">
<table class="table table-striped table-dark responsive-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @articles.each do |article| %>
    <tr>
      <td><%= simple_format(truncate(article.title, length:40)) %></td>
      <td><%= simple_format(truncate(article.description, length: 60)) %></td>
      <td><%= time_ago_in_words(article.created_at) %></td> 
      <td><%= link_to fa_icon("pencil-square", class: "index-icons text-info") ,edit_article_path(article) %> </td> 
      <td><%= link_to fa_icon("eye", class: "index-icons text-success") ,article_path(article) %> </td> 
      <td><%= link_to fa_icon("trash", class: "index-icons text-danger") ,article_path(article) %> </td>           
    </tr>
    <% end %> 
  </tbody>
</table>
</div>
